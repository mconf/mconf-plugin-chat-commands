{
    "compilerOptions": {
        "outDir": "./dist-tsc/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/*"],
    "paths": {
        "*": ["node_modules"]
    },
    "exclude": [
        "node_modules"
    ]
}
